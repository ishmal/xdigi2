<?xml version='1.0' encoding='utf-8'?>
<widget id="org.xdigi.xdigi2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>xdigi2</name>
    <description>
        Cross-platform digimodem experimentation toy.
    </description>
    <author email="ishmalius@gmail.com" href="http://github.com/ishmal/xdigi2">
        Xdigi group
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-audioinput" spec="~0.3.0" />
</widget>
